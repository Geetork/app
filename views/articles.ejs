<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title><%=title %></title>
    <link rel="stylesheet" type="text/css" href="style.css" />
  </head>
  <body>

    <div class="container">

      <%- include("header") -%>
      <div class="main-welcome-sidebar">

        <form action="/articles" method="post">
          <div>
            <div>
              <h2>Проверь статью</h2>
            </div>
            <div>
              <input class="input" type='text' name='article[title]' placeholder='Заголовок статьи' />
            </div>
            <div>
              <textarea type='text' name='article[content]' placeholder=''></textarea>
            </div>
            <div>
              <input class="input-button" type='submit' value='Проверить' />
            </div>
          </div>
        </form>

      </div>
      <div class="main-welcome-action">
        <% articles.forEach(function(article) {%>
          <div class="article">
            <h2><%= article.title %></h2>
            <p><%= article.content %></p>
          </div>
        <% }) %>
      </div>
      <%- include("../public/footer.html") -%>
    </div>
  </body>
</html>
